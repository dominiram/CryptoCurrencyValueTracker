<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/list_item_margin_start"
        android:layout_marginTop="@dimen/list_item_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_crypto_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_item_margin_start"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/list_item_iv"
        app:layout_constraintTop_toTopOf="@+id/list_item_iv" />

    <TextView
        android:id="@+id/list_item_crypto_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/list_item_crypto_name"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/list_item_crypto_symbol"
        app:layout_constraintTop_toBottomOf="@+id/list_item_crypto_symbol" />

</androidx.constraintlayout.widget.ConstraintLayout>